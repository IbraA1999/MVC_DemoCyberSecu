@{
    Random random = new Random();
    int value = random.Next(1, 20);
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 w-100">
            <div class="navbar">
                <a href="~/home/Index">Accueil</a>
                <a href="~/home/Contact">Contact</a>
                <a href="~/auth/login">Login</a>
                <a href="~/auth/register">S'enregistrer</a>
                <a href="~/Contact/GererContact">Gestion des contacts</a>
            </div>
        </nav>
    </header>
    <h2>Mon site web</h2>
    <p>Vous avez obtenu un score de : @value</p>
    @if(value == 20)
    {
        <p>Vous avez le maximum</p>
    } 
    else if (value >= 10)
    {
        <p>Vous êtes au-dessus de la moyenne</p>
    } 
    else if (value < 10)
    {
        <p>Vous êtes en-dessous de la moyenne</p>
    }

</body>
</html>